<div class="container">
  <div class="row">
    <h1>Welcome To Shortened Url App</h1>
    <%= link_to "Add Url", new_url_path, class: "btn btn-success"%>
    <table class="table table-bordered col-md-6">
      <tr>
        <th>Name</th>
        <th>Short Url</th> 
        <th>Acess Limit</th> 
        <th>Action</th>
      </tr>
      <% @urls.try(:each) do |url|%>
      <tr>
        <td><%= url.name %></td>
        <td><a href="<%= short_url_custom(url.url_original, url.shortened_urls.first)%>" target="_blank"><%= short_url_custom(url.url_original, url.shortened_urls.first)%></a></td>
        <td><%= url.no_of_access %></td>
        <td><%= link_to 'Delete', url_path(url), method: :delete, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>